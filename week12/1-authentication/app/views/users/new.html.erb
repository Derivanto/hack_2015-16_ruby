<h2> Create user </h2>

<%= form_for @user do |f| %>
	<% if @user.errors.any? %>
    <ul>
    	<% @user.errors.full_messages.each do |message| %>
     	 <li><%= message %></li>
    	<% end %>
    </ul>
  <% end %>

    <%= f.label :first_name %> <br> <%= f.text_field :f_name %>  <br>
    <%= f.label :last_name %> <br> <%= f.text_field :l_name %> <br>
    <%= f.label :email %> <br> <%= f.text_field :email %> <br>
    <%= f.label :password %> <br> <%= f.password_field :password %> <br>
    <%= f.label :password_confirmation %> <br> <%= f.password_field :password_confirmation %> <br>
    <%= f.submit %> 
<% end %>